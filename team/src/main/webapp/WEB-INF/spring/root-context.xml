<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jee="http://www.springframework.org/schema/jee" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-4.1.xsd
        http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee.xsd
        http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- 데이터 베이스를 연동하기 위해서 커넥션풀준비 -->
	<beans:bean id="dataSource" class="oracle.jdbc.pool.OracleDataSource">
		<beans:property name="dataSourceName" value="ds" />
		<beans:property name="URL"
			value="jdbc:oracle:thin:@192.168.0.117:1521:xe" />
		<beans:property name="user" value="scott" />
		<beans:property name="password" value="TIGER" />
	</beans:bean>

	<!-- 인가부분 -->
	<http auto-config='true' use-expressions="true">
		<intercept-url pattern="/sec/admin/**" access="hasAuthority('USER_MANAGER')" />
		<intercept-url pattern="/board/writeForm" access="hasAuthority('USER')" />
		<intercept-url pattern="/board/write" access="hasAuthority('USER')" />
		<intercept-url pattern="/**" access="permitAll" />
		<form-login login-page="/user/login"
			login-processing-url="/user/login" 
			username-parameter="id"
			password-parameter="pwd" default-target-url="/index.jsp"
			authentication-failure-url="/user/loginForm?error=true" />
		<logout logout-success-url="/sec/db" />
	</http>

	<!-- 암호화 -->
	<beans:bean id="passwordEncoder"
		class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder" />

	<!-- 인증부분 데이터베이스 연동해서 기본적으로 찾는 테이블이 USERS와 authorities이다. -->
	<authentication-manager>
		<authentication-provider>
			<jdbc-user-service data-source-ref="dataSource"
				users-by-username-query="SELECT userid, upwd, enabled FROM puser WHERE userid =?"
				authorities-by-username-query="SELECT userid, authority FROM puser WHERE userid=?" />
			<password-encoder ref="passwordEncoder" />
		</authentication-provider>
	</authentication-manager>



</beans:beans>
